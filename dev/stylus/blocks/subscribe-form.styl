////////////////////////////////////////
// $Subscribe form
////////////////////////////////////////

//////////////////////////////////////// Block variables

//////////////////////////////////////// Block mixins and functions

//////////////////////////////////////// Block styles
$block = ".subscribe-form"

{$block}
	display inline-block
	width 100%
	max-width 400px
	vertical-align top

	& input[type=text]
		width 65%
		padding 0 10px
		border none
		font-size 16px
		vertical-align top

		&:focus
			outline none

	& input[type=submit]
		width 30%
		border none
		font-size 16px
		font-weight bold
		margin-left -5px
		vertical-align top

		&:focus
			outline none
